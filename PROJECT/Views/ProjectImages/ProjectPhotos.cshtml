@model ProjectImages;
@{
    Layout = "_Layout";
}

<style>
    .images {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        margin-inline: 10%;
        max-width: 80%;
    }

        .images img {
            margin: 1em;
            width: 300px;
            height: 300px;
        }

    .input {
        margin-inline: 5%;
        margin-top: 5%;
    }
</style>


<div class="images">
    @if (ViewBag.Images != null)
    {
        @foreach (string img in ViewBag.Images)
        {
            <img src="@img" />
        }

    }
</div>
<h2>Add Images</h2>
<form asp-controller="ProjectImages" asp-action="AddImage" enctype="multipart/form-data">
    <table>
        <tr>
            <td> <label asp-for="hasPublicPermision"></label>
            </td>
            <td>
                <input asp-for="hasPublicPermision"/>
            </td>
        </tr>

    </table>
    <input type="hidden" asp-for="ProjectId" value="@ViewBag.ProjId"/>

    <input type="file" id="ImageData" name="ImageData" />
    <input type="submit" />
</form>
