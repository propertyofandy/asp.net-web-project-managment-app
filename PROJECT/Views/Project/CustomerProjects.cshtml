@using PROJECT.Models
@model IEnumerable<Projects> 

@{
    ViewBag.Title = "Cstomer Projects";
    Layout = "_Layout";
}

@if(ViewBag.Customer != null)
{
    
}

@if(Model != null)
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Project Type</th>
                <th scope="col">Cost</th>
                <th scope="col">Order Date</th>
                <th scope="col">Is Complete</th>
                <th scope="col">Images</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Projects p in Model)
            {

                <tr>
                    <td>@p.ProjType</td>
                    <td>@p.Cost</td>
                    <td>@p.OrderedDate</td>
                    <td>@p.IsComplete</td>
                    <td><a class="btn btn-info" asp-controller="ProjectImages" asp-action="ProjectPhotos" asp-route-id="@p.Id">Images</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects to show at this time.</p>
}

<a class="btn btn-info" asp-controller="Project" asp-action="Create" asp-route-id="@ViewBag.Customer.Id">Add Project</a>


