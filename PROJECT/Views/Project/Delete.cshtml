@model IEnumerable<Projects>

@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Project";
}

<table class="table table-hover">
    <thead class="table-dark">
    <th scope="col">ID</th>
    <th scope="col">Project Type</th>
    <th scope="col">Is Completed</th>
    <th scope="col">Ordered Date</th>
    <th scope="col">Cost</th>
    <th scope="col">Delete</th>
    </thead>
    <tbody>
        @foreach (Projects p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.ProjType</td>
                <td>@p.IsComplete</td>
                <td>@p.OrderedDate</td>
                <td>@p.Cost</td>
                <td>
                    <a class="btn btn-danger" onclick="return confirm('@p.Id will be deleted')" asp-controller="Project" asp-action="DeleteAction" asp-route-id="@p.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


